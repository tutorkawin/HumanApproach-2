ascending order:

int a[]={7,9,2,5,8,11};

o/p: {2,5,7,8,9,11}


for(int i=0;i<n;i++) 5
{
	for(int j=i+1;j<n;j++) 
	{
		if(a[i]>a[j]) 
		{
			int temp=a[i];
			a[i]=a[j];
			a[j]=temp;
		}

	}
}
for(int i=0;i<n;i++)
{
	print(a[i]);
}


